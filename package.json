{
  "name": "joladnijo-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "typecheck": "tsc --project ./tsconfig.noemit.json",
    "playwright:install": "playwright install",
    "e2e": "playwright test"
  },
  "dependencies": {
    "next": "12.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "^1.2.2"
  },
  "devDependencies": {
    "@playwright/test": "1.15.0",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/react": "12.1.2",
    "@testing-library/user-event": "13.5.0",
    "@types/node": "17.0.21",
    "@types/react": "17.0.40",
    "eslint": "8.10.0",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "5.0.1",
    "husky": "^7.0.4",
    "jest": "27.4.5",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "ts-jest": "27.0.5",
    "ts-node": "^10.7.0",
    "typescript": "4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,txt,xml}": [
      "prettier --write",
      "git add"
    ]
  }
}
